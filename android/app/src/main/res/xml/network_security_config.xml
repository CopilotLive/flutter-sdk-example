<?xml version="1.0" encoding="utf-8"?>
<network-security-config xmlns:tools="http://schemas.android.com/tools">
    <!-- Specific domain configurations for Kaily -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">kaily.ai</domain>
        <domain includeSubdomains="true">script.copilot.live</domain>
        <domain includeSubdomains="true">copilot.live</domain>
        <domain includeSubdomains="true">fynd.com</domain>
    </domain-config>
    <!-- Allow all HTTPS traffic with system certificates -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"
                tools:ignore="AcceptsUserCertificates" />
        </trust-anchors>
    </base-config>
    
    <!-- Debug configuration for development -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>
